<!doctype html>
<html lang="en">
  <head>
    {{> head}}
  </head>
  <body>
    {{> menu this.menuState}}
    
    <div class="ui segment">
      <h1>Room(s)</h1>
      <div class="ui two column grid container">
        {{#if rooms}}
        <table style="text-align:center">
            <tr>
            <th>Nome</th>
            <th>Number of rows</th>
            <th>Number of seats per row</th>
            <th>Sessions</th>
        </tr>
        {{#each rooms}}
        <tr>
            <td>{{nome}}</td>
            <td>{{nrFila}}</td>
            <td>{{numLugaresFila}}</td>
            <td><a href="/cinema/{{idCine}}/room/{{id}}/sessions">Click here</a></td>
        </tr>
        {{/each}}
        </table>
        {{else}}
        <h2>Nothing to show...</h2>
        {{/if}}
      </div>
    </div>
  </body>
</html>
