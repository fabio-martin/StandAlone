<!doctype html>
<html lang="en">
  <head>
    {{> head}}
  </head>
  <body>
    {{> menu this.menuState}}
    
    <div class="ui segment">
      <h1>{{movie.titulo}}</h1>
      <div class="ui two column grid container">
        <ul>
          {{#if movie}}
          <li>Id: {{movie.id}}</li>
          <li>Release Date: {{movie.anoPublicacao}}</li>
          <li>Duration: {{movie.duracao}} minutes</li>
          <img src="http://image.tmdb.org/t/p/w185/{{movie.poster_path}}" >
          {{else}}
          <h2>Nothing to show...</h2>
          {{/if}}
        </ul>
      </div>
    </div>
  </body>
</html>